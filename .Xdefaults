# --[ Xft Settings ]--

# Quality settings.
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

# --[ urxvt Settings ]--

# How many lines to save.
URxvt*saveLines: 1200

# Foreground/background colors.
URxvt*foreground: #ffffff
URxvt*background: #000000

# Source Code Pro font.
URxvt*font: xft:Source Code Pro:pixelsize=14:antialias=true:hinting=true
URxvt*boldFont: xft:Source Code Pro:bold:pixelsize=14:antialias=true:hinting=true

# Disable scrollbar.
URxvt*scrollBar: false

# Fix Vim Keys
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

# Disable CTRL+SHIFT bindings.
URxvt.iso14755: false
URxvt.iso14755_52: false
